{
  "name": "monad-hello-world",
  "version": "1.0.0",
  "description": "A simple Web3 demo for Monad testnet",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network monad_local",
    "deploy:testnet": "hardhat run scripts/deploy-testnet.js --network monad_testnet",
    "deploy:testnet:env": "DEPLOY_PRIVATE_KEY=$PRIVATE_KEY hardhat run scripts/deploy-testnet.js --network monad_testnet",
    "update-address": "node scripts/update-contract-address.js",
    "node": "hardhat node",
    "dev": "cd frontend && npm run dev",
    "start": "npm run node",
    "start-all": "node scripts/start-services.js",
    "install-frontend": "cd frontend && npm install",
    "test": "hardhat test",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1"
  }
} 